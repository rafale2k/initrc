[init]
    defaultBranch = main

[alias]
    # グラフ表示（これ1つで履歴が丸わかり）
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset) %C(bold yellow)%d%C(reset)' --all
    # 短縮コマンド
    st = status -sb
    co = checkout
    br = branch
    ci = commit
    amend = commit --amend --no-edit

[color]
    ui = auto
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[help]
    # コマンドを打ち間違えた時、0.5秒後に自動実行してくれる
    autocorrect = 5

[core]
    quotepath = false
    autocrlf = input
    excludesfile = ~/.gitignore_global

[push]
    default = current

[fetch]
    prune = true

# マシン固有の設定があれば読み込む（名前、メールなど）
[include]
    path = ~/.gitconfig.local
[user]
	name = Dassult Rafale
